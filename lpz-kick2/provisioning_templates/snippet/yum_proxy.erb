<%#
name: yum_proxy
snippet: true
model: ProvisioningTemplate
organizations:
- Default Organization
locations:
- Default Location
-%>
<%
proxy_uri = host_param('http-proxy') ? "http://#{host_param('http-proxy')}:#{host_param('http-proxy-port')}" : nil
-%>

<% if proxy_uri -%>
  echo 'proxy = <%= proxy_uri %>' >> /etc/yum.conf
<% end -%>
